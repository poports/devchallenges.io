@page
@model AuthServer.Pages.Account.Manage.SetPasswordModel
@{
}

<section class="w-full lg:w-2/3">
    <partial name="_StatusMessage" for="StatusMessage" />
    <div class="p-8 mt-6 lg:mt-0 rounded shadow bg-white rounded-lg">
        <h1 class="font-bold break-normal text-gray-700 px-2 text-2xl mt-12 lg:mt-0">Set your Password</h1>
        <p class="text-gray-700 mb-12 px-2 text-sm tracking-tight">
            You do not have a local username/password for this site. Add a local
            account so you can log in without an external login.
        </p>

        <form method="post">

            <div class="lg:flex mb-6 lg:items-center lg:mr-12">
                <div class="lg:w-1/4">
                    <label asp-for="Input.NewPassword" class="text-gray-600 md:text-left text-sm mb-3 md:mb-0 pr-4 uppercase"> </label>
                </div>
                <div class="lg:w-3/4">
                    <input asp-for="Input.NewPassword" class="w-full px-4 bg-gray-100 h-10 rounded-lg border border-gray-500 focus:border-blue-400" type="password" />
                    <span asp-validation-for="Input.NewPassword" class="text-red-500 font-light text-xs"></span>
                </div>
            </div>

            <div class="lg:flex mb-6 lg:items-center lg:mr-12">
                <div class="lg:w-1/4">
                    <label asp-for="Input.ConfirmPassword" class="text-gray-600 md:text-left text-sm mb-3 md:mb-0 pr-4 uppercase"> </label>
                </div>
                <div class="lg:w-3/4">
                    <input asp-for="Input.ConfirmPassword" class="w-full px-4 bg-gray-100 h-10 rounded-lg border border-gray-500 focus:border-blue-400" type="password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-red-500 font-light text-xs"></span>
                </div>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-red-500 font-light text-xs"></div>
            <div class="lg:flex md:items-center">
                <div class="lg:w-1/4"></div>
                <div class="lg:w-3/4 flex justify-end">
                    <a asp-page="Index" class="tracking-wider border border-blue-500 border-gray-500 bg-transparent-700 hover:bg-blue-400 focus:outline-none hover:text-white text-blue-500 font-bold py-2 px-8 rounded mx-2">
                        Back
                    </a>
                    <button class="tracking-wider shadow bg-blue-700 hover:bg-blue-400 focus:outline-none text-white font-bold py-2 px-8 rounded mr-10"
                            type="submit">
                        Save
                    </button>
                </div>
            </div>
        </form>
    </div>
    <div class="text-gray-500 flex justify-between m-2">
        <span>poports</span>
        <span>devchallenges.io</span>
    </div>
</section>